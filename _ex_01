package chap_04;

public class _ex_01 {
	public static void main(String[] args) {
		for (int i=2; i<=9; i++) {
			for (int j=1; j<=9; j++) {
				if (i%2==1) {
					continue;
				}
				System.out.println(i + "*" + j + " = " + (i*j));
			}
		}
		System.out.println("-----------");
		
		for (int i=2; i<=9; i+=2) {
			for (int j=1; j<=9; j++) {
				System.out.println(i + "*" + j + " = " + (i*j));
			}
		}
	}
}
